<h1><%= @artist.name %> </h1>

<img src="<%= @artist.photo_url %>" height="300"> 


<h2><%= @artist.genre %></h2>

<ul>
  <% @artist.songs.each do |song| %>
  <li>
    <%= song.title %>, <%= song.year %>
    <form action="/artists/<%= @artist.id %>/songs/<%= song.id %>" method="POST" >
      <input type="hidden" name="_method" value="DELETE" />
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />
      <button>Delete</button>
    </form>
    <a href="/artists/<%= @artist.id %>/songs/<%= song.id %>/edit">Edit this Song </a>
  </li>
  <% end %>
</ul>

<a href="/artists">All Artists</a>
<a href="/artists/<%= @artist.id %>/songs/new"> New Song</a>