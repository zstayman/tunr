<h1>Artists</h1>

<% @artists.each do |artist| %>

<div>
  <%= link_to(artist) do %>
  <img src="<%= artist.photo_url %>" height=300 />
  <% end %>

  <p class="caption"><%= link_to("#{artist.name}", artist) %> <%= link_to("Edit Artist", edit_artist_path(artist.id) ) %></p>
</div>

<form action="/artists/<%= artist.id %>" method="POST" >
  <input type="hidden" name="_method" value="DELETE" />
  <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />
  <button>Delete</button>

</form>
<% end %>
<br>
<%= link_to("Add a new artist", new_artist_path) %>



